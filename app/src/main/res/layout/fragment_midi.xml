<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.MidiFragment">

    <Button
        android:id="@+id/Anote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Bnote"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="@+id/Anote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Anote" />

    <Button
        android:id="@+id/Cnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="@+id/Bnote"
        app:layout_constraintStart_toEndOf="@+id/Bnote"
        app:layout_constraintTop_toTopOf="@+id/Bnote" />

</androidx.constraintlayout.widget.ConstraintLayout>